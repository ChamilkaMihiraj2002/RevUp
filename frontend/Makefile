# Default command
install:
	npm install

# Start development server
dev:
	npm run dev

# Build project
build:
	npm run build

# Preview production build
preview:
	npm run preview

# Run test suite (ensure package.json has "test": "vitest" or appropriate)
test:
	npm test

# Watch mode (needs "test:watch": "vitest --watch")
test-watch:
	npm run test:watch

# Coverage report (needs "coverage": "vitest run --coverage")
coverage:
	npm run coverage
